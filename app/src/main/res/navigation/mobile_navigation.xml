<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/initialFragment">

    <fragment
        android:id="@+id/initialFragment"
        android:name="com.itsight.flash.view.InitialFragment"
        android:label="Flash Mobile Peru"
        tools:layout="@layout/initial_fragment"
        >
        <action
            android:id="@+id/action_initialFragment_to_preActivationFragment"
            app:destination="@id/preActivationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/preActivationFragment"
        android:name="com.itsight.flash.view.PreActivationFragment"
        android:label="Welcome to Activa tu Flash"
        tools:layout="@layout/pre_activation_fragment" >
        <action
            android:id="@+id/action_preActivationFragment_to_ordersFragment"
            app:destination="@id/ordersFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.itsight.flash.view.OrdersFragment"
        android:label="Web Activation orders"
        tools:layout="@layout/orders_fragment" />
</navigation>