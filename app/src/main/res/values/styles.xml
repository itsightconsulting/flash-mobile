<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_flash_mobile</item>
    </style>


    <!-- Colors -->
    <style name="dark_purple">
        <item name="android:backgroundTint">#88237c</item>
    </style>
    <style name="purple">
        <item name="android:backgroundTint">#b13ace</item>
    </style>
    <style name="green">
        <item name="android:backgroundTint">#979939</item>
    </style>

    <style name="dark">
        <item name="android:backgroundTint">#1c1c1c</item>
    </style>
    <style name="gray">
        <item name="android:backgroundTint">#545454</item>
    </style>
    <style name="gray_medium">
        <item name="android:backgroundTint">#898989</item>
    </style>
    <style name="light">
        <item name="android:backgroundTint">#f2f2f2</item>
    </style>

    <!-- Colors error -->
    <style name="black_error">
        <item name="android:backgroundTint">#4c4151</item>
    </style>
    <style name="button_error">
        <item name="android:backgroundTint">#86599b</item>
    </style>
    <style name="text_error">
        <item name="android:backgroundTint">#cdc8ce</item>
    </style>

    <!-- General styles -->
    <style name="pages_name_links_button">
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>
    <style name="subtitles_fields_name_carrusel_titles">
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>
    <style name="placeholder_body_text">
        <item name="android:fontFamily">@font/gotham_light</item>
    </style>

    <style name="pages_name">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="pages_subtitle">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="fields_name">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#545454</item>
    </style>

    <style name="text_fields_answered">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1c1c1c</item>
    </style>

    <style name="message_for_text_fields">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#88237c</item>
    </style>

    <style name="placeholder">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#898989</item>
    </style>

    <style name="fields_name_with_options">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#88237c</item>
    </style>

    <style name="text_options_radio">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#1c1c1c</item>
    </style>

    <style name="summary_text">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#1c1c1c</item>
        <item name="android:background">#545454</item>
    </style>

    <style name="text_options_check_dark_purple">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#88237c</item>
    </style>

    <style name="text_options_check_dark">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1c1c1c</item>
    </style>

    <style name="button_purple">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:backgroundTint">#b13ace</item>
    </style>

    <style name="button_white">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#b13ace</item>
        <item name="android:backgroundTint">#fff</item>
    </style>

    <style name="button_dark_purple">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:backgroundTint">#88237c</item>
    </style>

    <style name="button_with_icon">
        <item name="android:backgroundTint">#fff</item>
    </style>
</resources>
