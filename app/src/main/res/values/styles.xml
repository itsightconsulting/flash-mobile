<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="dialog_scanner">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_flash_mobile</item>
    </style>

    <!-- General styles -->
    <style name="pages_name_links_button">
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="subtitles_fields_name_carrusel_titles">
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>

    <style name="placeholder_body_text">
        <item name="android:fontFamily">@font/gotham_light</item>
    </style>

    <style name="pages_name">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="pages_subtitle">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fields_name">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_fields_answered">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="text_description">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="text_description_bold">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="text_description_error">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_sec</item>
    </style>

    <style name="text_description_error_bold">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_sec</item>
    </style>

    <style name="message_for_text_fields">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="placeholder">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_medium</item>
    </style>

    <style name="title_transition_view">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="subtitles_fields">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="fields_name_with_options">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="text_options_radio">
        <item name="android:fontFamily">@font/gotham_light</item>fields_name
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="bold_summary_text">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="summary_text">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="summary_text_medium">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="main_form_summary_text">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="text_options_check_dark_purple">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="text_options_check_dark">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="welcome_help_option">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="special_title">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="button_purple">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
    </style>

    <style name="button_purple_no_mg">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="button_white">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/purple</item>
        <item name="strokeWidth">4dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="button_dark_purple">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dark_purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
    </style>

    <style name="button_dark_error">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/button_error</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="button_with_icon">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="carrusel_titles">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="especial_parcial_title">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="carrusel_subtitles">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
    </style>

    <style name="flash_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:paddingLeft">-12dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/field_error</item>
    </style>


    <style name="flash_input_dropdown_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">-12dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/field_error</item>
    </style>


    <style name="flash_input_dropdown">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginTop">-12dp</item>
        <item name="android:layout_marginRight">-10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="flash_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginTop">-12dp</item>
        <item name="android:layout_marginRight">-10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="field_error" parent="Widget.Design.TextInputLayout">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">16sp</item>
        <!--Propiedad sin efecto(textColor). En revisión... -->
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="especial_field_error">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>


    <style name="button_white_without_border">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="fields_name_resume">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
